{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2020",
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "@components/*": [
                "src/ui/components/*"
            ],
            "@hooks/*": [
                "src/ui/hooks/*"
            ],
            "@modules/*": [
                "src/ui/modules/*"
            ],
            "@sdk/*": [
                "src/sdk/generated_ts/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
